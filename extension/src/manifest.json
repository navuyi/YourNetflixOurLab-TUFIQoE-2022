{
  "manifest_version": 3,
  "name": "Watching With Friends",
  "description": "AGH-TUFIQoE-2022 Netflix Experiment || Chrome Extension by Rafal Figlus",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_icon": "32.png"
  },
  "icons": {
    "128": "128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-34.png",
        "32.png",
        "64.png",
        "logo.png"
      ],
      "matches": []
    },
    {
      "resources": ["netflixControls.bundle.js","netflix-controls-script.js", "scripts/*"],
      "matches": ["<all_urls>"]
    }

  ],
  "host_permissions": [
    "https://www.netflix.com/*"
  ],
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "debugger",
    "webNavigation",
    "unlimitedStorage",
    "background",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback"
  ]
}